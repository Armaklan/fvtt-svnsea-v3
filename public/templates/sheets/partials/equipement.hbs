          <li class="equipement-item" data-item-id="{{item._id}}">
            <div class="equipement-row">
              <div class="equipement-name">
                <input type="text" value="{{item.name}}" placeholder="Nom de l'Ã©quipement"/>
              </div>
              <div class="item-controls">
                <a class="item-control item-delete" title="Delete Equipement"><i class="fas fa-trash"></i></a>
