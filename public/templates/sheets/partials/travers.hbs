<header class="travers-header">
  <h3 class="travers-title">Travers</h3>
  <div class="item-controls">
    <a class="item-control item-create" title="Create Travers" data-type="travers"><i class="fas fa-plus"></i> Ajouter un Travers</a>
  </div>
</header>
<ol class="travers-list">
  {{#each actor.items as |item|}}
      {{#if (eq item.type "travers")}}
          <li class="travers-item item" data-item-id="{{item._id}}">
            <div class="travers-row">
              <div class="travers-name">
                <span>{{item.name}}</span>
              </div>
              <div class="item-controls">
                <a class="item-control item-edit" title="Modifier le Travers"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Supprimer le Travers"><i class="fas fa-trash"></i></a>
              </div>
            </div>
            <div class="travers-description">
              {{{item.system.description}}}
            </div>
          </li>
      {{/if}}
  {{/each}}
</ol>